#!/usr/bin/make -f

export DH_VERBOSE=1
VERS=$(shell dpkg-parsechangelog | sed -rne 's,^Version: ([^-]+).*,\1,p')

%:
	dh $@ --with python3

override_dh_auto_test:
	./run_tests.sh unit

override_dh_install:
	dh_install

get-orig-source:
	python3 ./setup.py sdist
	cp dist/*.tar.gz ../weebl_${VERS}.orig.tar.gz
	cp dist/*.tar.gz /tmp/weebl_${VERS}.orig.tar.gz
	rm -rf dist
	dh_auto_clean
